{% style %}
  .comparison-section {
    background-color: #f9f9f9;
    padding: 60px 0;
    margin: 80px 0;
  }

  .comparison-title {
    text-align: center;
    font-size: 1.8em;
    margin-bottom: 40px;
    color: var(--color-text);
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .comparison-column {
    padding: 30px;
  }

  .comparison-column-title {
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--color-text);
  }

  .comparison-list {
    list-style: none;
    padding: 0;
  }

  .comparison-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    color: var(--color-text-light);
  }

  .comparison-item svg {
    margin-right: 10px;
    flex-shrink: 0;
  }
{% endstyle %}

<div class="comparison-section">
  <div class="container">
    <h2 class="comparison-title">{{ section.settings.title }}</h2>
    <div class="comparison-grid">
      <div class="comparison-column">
        <h3 class="comparison-column-title">{{ section.settings.conventional_title }}</h3>
        <ul class="comparison-list">
          {% for block in section.blocks %}
            {% if block.type == 'conventional' %}
              <li class="comparison-item" {{ block.shopify_attributes }}>
                {% render 'icon-cross' %}
                <span>{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <div class="comparison-column">
        <h3 class="comparison-column-title">{{ section.settings.naturebuff_title }}</h3>
        <ul class="comparison-list">
          {% for block in section.blocks %}
            {% if block.type == 'naturebuff' %}
              <li class="comparison-item" {{ block.shopify_attributes }}>
                {% render 'icon-check' %}
                <span>{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>


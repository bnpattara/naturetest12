{% style %}
  .how-it-works-hero {
    padding: 60px 0;
    text-align: center;
  }

  .how-it-works-hero__title {
    color: var(--color-text);
    font-size: 2.5em;
    margin-bottom: 20px;
  }

  .how-it-works-hero__subtitle {
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
{% endstyle %}

<div class="how-it-works-hero">
  <div class="container">
    <h1 class="how-it-works-hero__title">{{ section.settings.title }}</h1>
    <p class="how-it-works-hero__subtitle">{{ section.settings.subtitle }}</p>
  </div>
</div>

{% schema %}
{
  "name": "How It Works Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "How It Works"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover how NatureBuff products integrate seamlessly into your daily life, adventures, and travels while helping protect the planet."
    }
  ],
  "presets": [
    {
      "name": "How It Works Hero"
    }
  ]
}
{% endschema %} 